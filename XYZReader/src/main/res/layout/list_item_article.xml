<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/listCard_marginBottom"
    android:layout_marginTop="@dimen/listCard_marginTop"
    android:layout_marginLeft="@dimen/listCard_marginLeft"
    android:layout_marginRight="@dimen/listCard_marginRight"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/listCard_cornerRadius">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.xyzreader.ui.BigCardImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listCard_layoutHeight"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/scrim_gradient"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/article_title"
                style="@style/Base.TextAppearance.AppCompat.Headline.Bacon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/cardTitle_paddingTop"
                android:paddingBottom="@dimen/cardTitle_paddingBottom"
                android:paddingLeft="@dimen/cardTitle_paddingLeft"
                android:paddingRight="@dimen/cardTitle_paddingRight"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/Base.TextAppearance.AppCompat.Subhead.Bacon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/cardSubtitle_paddingBottom"
                android:paddingLeft="@dimen/cardSubtitle_paddingLeft"
                android:paddingRight="@dimen/cardSubtitle_paddingRight"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
