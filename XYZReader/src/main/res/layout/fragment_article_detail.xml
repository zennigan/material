<?xml version="1.0" encoding="utf-8"?>
<com.example.xyzreader.ui.DrawInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_insets_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="78dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/detail_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/detailContent_layoutMargin"
            app:contentPaddingRight="@dimen/detailContent_paddingRight"
            app:contentPaddingLeft="@dimen/detailContent_paddingLeft"
            app:contentPaddingBottom="@dimen/detailContent_paddingBottom"
            app:cardElevation="@dimen/detailContent_cardElevation"
            app:cardCornerRadius="@dimen/detailContent_cardCornerRadius"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Base.TextAppearance.AppCompat.Headline.Bacon"/>

                <TextView
                    android:id="@+id/article_byline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/detailContent_paddingBottom"
                    android:textAppearance="@style/TextAppearance.Header.Bacon"/>

                <TextView
                    android:id="@+id/article_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2.Bacon" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
</com.example.xyzreader.ui.DrawInsetsFrameLayout>
